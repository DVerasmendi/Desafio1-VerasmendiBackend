<div id="container">
    <h1 class="text-background" style="font-size: 2.5rem;">Bienvenido a {{pageTitle}}</h1>
{{#if messages.length}}
<div class="container pt-5">
    {{#each messages}}
    <div class="card mb-3 mt-3">
        <div class="card-header">
            <strong>Cliente: {{user}}</strong> || Fecha: {{timestamp}}
        </div>
        <div class="card-body">
            <p class="card-text"> <strong>Mensaje:</strong> {{message}}</p>
        </div>
    </div>
    {{/each}}
</div>
<div class="container text-center">
    <a class="text-background btn btn-danger btn-lg mb-5" href="/products" role="button">Volver</a>
</div>
{{else}}
        <div class="d-flex justify-content-center align-items-center mb-5">
        <h3 class="text-background" style="font-size: 2rem;">No tiene mensajes por ahora.</h3>
        </div>
        <div class="container text-center">
        <a class="text-background btn btn-danger btn-lg mb-5" href="/products" role="button">Volver</a>
        </div>
    {{/if}}
</div>
