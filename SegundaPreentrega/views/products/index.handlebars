
{{#if categorySubtitle}}
<div class="d-flex justify-content-center align-items-center">
<h1 class="text-background" style="font-size:1.5rem">Nuestros {{pageTitle}} | Categoria: {{categorySubtitle}}</h1>
</div>
{{/if}}
<div class="d-flex justify-content-center align-items-center">
<h1 class="text-background" style="font-size:1.5rem">Nuestros {{pageTitle}}</h1>
</div>
<hr class="my-4">
<div class="d-flex justify-content-center align-items-center">
<h3 class="text-background" style="font-size:1.2rem"><em>{{welcomeMessage}}</em></h3>
</div>
<hr class="my-4">
<div class="d-flex justify-content-center align-items-center">
    <form action="/products/category" method="GET" class="form-inline" id="categoryForm">
        <div class="form-group mx-2 pb-5">
            <label for="categoryFilter" class="text-background mb-2" style="font-size:1.2rem"><strong>Filtrar por Categoría:</strong></label>
            <select id="categoryFilter" name="category" class="form-control" onchange="submitCategoryForm()" style="font-size:1.2rem">
                <option value="">Todas las categorías</option>
                {{#each uniqueCategories}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </form>
</div>
<div class="d-flex flex-column justify-content-center align-items-center">
{{#each products}}
<div class="product card d-flex justify-content-center align-items-center p-2 col-8 mb-3">
    <img src="{{imageUrl}}" class="card-img-top img_index_product" alt="{{name}}">
    <div class="card-body text-background">
        <h5 class="card-title text-center"><strong>{{name}}</strong></h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text">Precio: ${{price}}</p>
        <p class="card-text">Stock: {{stock}}</p>
        <p class="card-text">Categoria: {{category}}</p>
        <a href="/products/{{_id}}" class="btn btn-primary btn-lg">Ver detalles</a>

        <button class="btn btn-success btn-lg" onclick="addToCart('{{_id}}', '{{name}}', {{price}}, '65c9326dffef98faa42dee08')">Agregar al carrito</button>

    </div>
</div>
{{else}}
<p>No hay productos disponibles.</p>
{{/each}}
</div>
<script src="/public/js/addtocart.js"></script>

<script>
    function submitCategoryForm() {
        document.getElementById('categoryForm').submit();
    }
</script>