<div id="chat-container">
    <h1 class="text-background" style="font-size: 2.5rem;">{{pageTitle}}</h1>
{{#if tickets.length}}
<div class="container">
    {{#each tickets}}
    <div class="card mb-3 mt-3">
        <div class="card-header" style="font-size: 1.2rem;" >
            <strong>Ticket: </strong>{{code}} <br>
            <strong>Cliente: </strong>{{purchaser}} <br>
            <strong >Monto total: {{amount}} </strong>
        </div>
        <div class="card-body">
            <p class="card-text"><strong >Productos:</strong></p>
            <ul>
                {{#each purchasedProducts}}
                <li>
                    <strong>Nombre: </strong>{{name}} <br>
                    <strong>Cantidad: </strong>{{quantity}} <br>
                    <strong>Precio Unidad: </strong>{{price}} <br>
                    <strong>Total: </strong>{{totalAmount}}
                </li>
                <br>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/each}}
</div>
<div class="container text-center">
<a class="text-background btn btn-danger btn-lg mb-5" href="/products" role="button">Volver</a>
</div>
{{else}}
        <div class="d-flex justify-content-center align-items-center mb-5">
        <h3 class="text-background" style="font-size: 2rem;">No tiene pedidos por ahora.</h3>
        </div>
        <div class="container text-center">
        <a class="text-background btn btn-danger btn-lg mb-5" href="/products" role="button">Volver</a>
        </div>
    </div>
    {{/if}}
</div>
