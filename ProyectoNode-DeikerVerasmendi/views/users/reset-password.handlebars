<div class="jumbotron">
    <div class="container text-center">
        <div class="d-flex justify-content-center align-items-center">
        <h1 class="text-border text-background" style="font-size:1.5rem">Restablecer Contraseña</h1>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <p class="text-background" style="font-size:1.5rem">Introduce y confirma tu nueva contraseña.</p>
        </div>
            <div class="d-flex justify-content-center align-items-center mt-2">
            <div class="container row justify-content-center">
                <form id="resetPasswordForm" method="POST" action="/api/auth/reset-password/{{token}}" data-token="{{token}}">
                    <div class="mb-3 col-6">
                        <input type="password" name="newPassword" class="form-control text-background form-control col-12" placeholder="Nueva Contraseña" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="password" name="confirmPassword" class="form-control text-background form-control col-12" placeholder="Confirmar Contraseña" required>
                    </div>
                    <button id="boton_sendNewPassword" type="button" class="text-background btn btn-dark btn-lg mb-2 flex-fill">Restablecer Contraseña</button>
                </form>
                <div class="mb-3 col-6">
                <a class="text-background btn btn-danger btn-lg mb-2 flex-fill" style="font-size: 1.2rem;" href="/" role="button">Volver</a>
                </div>
            </div>
            </div>
    </div>
</div>
<script src="/public/js/sendNewPasswordRequest.js"></script>